{% extends "_layout.njk" %}

{% block title %}{{ __(page.title) }} | {{ config.title }}{% endblock %}

{% block content %}
<section class="categories" id="categories">
  <article class="page-article card{% if theme.animate %} animate{% endif %}">
    <header class="page-header">
      <h1 class="page-title" itemprop="name headline">{{ __(page.title) }}</h1>
    </header>
    <main class="page-main">
      <div class="categories-container">
        <div class="categories-counter">
          {% if site.categories.length > 1 %}
          <p>{{ _p("categorycount.more", site.categories.length) }}</p>
          {% elif site.categories.length == 1 %}
          <p>{{ _p("categorycount.one", site.categories.length) }}</p>
          {% else %}
          <p>{{ __("categorycount.none") }}</p>
          {% endif %}
        </div>
        <div class="categories-list">
          {{ list_categories() }}
        </div>
      </div>
    </main>
    <footer class="page-footer"></footer>
  </article>
</section>
{% endblock %}
